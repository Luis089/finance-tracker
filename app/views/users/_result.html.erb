<div class="row">
    <div class="col-10 no-right-padding no-left-padding">
        <%= render 'layouts/messages' %>
        <%if @stock %>
        <div class="card card-header results-block">
            <strong>Symbol: </strong> <%= @stock.ticker%>
            <strong>Name: </strong> <%= @stock.name%>
            <strong>Letzter Preis: </strong> <%= @stock.last_price%>
            <% if current_user.can_track_stock?(@stock.ticker) %>
            <%= link_to 'Folgen', user_stocks_path(user: current_user, ticker: @stock.ticker), 
                    class:"btn btn-success btn-sm ml-3", method: :post%>
            <% else %>
            <span class="badge badge-secondary">
                <%if !current_user.under_stock_limit? && !current_user.stock_already_tracked?(@stock.ticker)%>
                Maximale Anzahl von 10 Kursen erreicht
                <% elsif !current_user.under_stock_limit? && current_user.stock_already_tracked?(@stock.ticker)%>
                <%= "Du folgst bereits #{@stock.name}" %>
                <% end%>
            </span>
            <% end %>
        </div>
        <%end%>
    </div>
</div>