<div class="row">
    <div class="col-10 no-right-padding no-left-padding">
        <%= render 'layouts/messages' %>
        <%if @stock %>
        <div class="card card-header results-block">
            <strong>Symbol: </strong> <%= @stock.ticker%>
            <strong>Name: </strong> <%= @stock.name%>
            <strong>Letzter Preis: </strong> <%= @stock.last_price%>
            <% if current_user.can_track_stock?(@stock.ticker) %>
            <%= link_to 'Folgen', user_stocks_path(user: current_user, ticker: @stock.ticker), 
                    class:"btn btn-success btn-sm ml-3", method: :post%>
            <% else %>
            <span class="badge badge-secondary">
                - Bereits gespeichert
            </span>
            <%if !current_user.under_stock_limit? %>
            10 Stocks
            <% end%>

            <% end %>
        </div>
        <%end%>
    </div>
</div>