<div class="row">
    <div class="col-9 no-right-padding">
        <div class="results-block">
            <%= render 'layouts/messages' %>
        </div>

        <%if @friends %>
        <div class="card card-header results-block">
            <% @friends.each do |friend|%>
            <strong>Name: </strong> <%= friend.full_name%>
            <strong>E-Mail: </strong> <%= friend.email%>
            <%= link_to "Profil", '#',
            class:"btn btn-sm btn-info ml-1" %>
            <%= link_to 'Folgen', '#', 
                                class:"btn btn-success btn-sm ml-1", method: :post %>
            <br>
            <br>
            <%end %>
        </div>
        <%end%>
    </div>
</div>